<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeFeatureItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item>
    </style>


    <!-- ðŸ‘‡ Add this new style here -->
    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/calendarDateColor</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendarWeekDayColor</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="CalendarDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CalendarHeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

</resources>