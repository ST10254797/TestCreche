<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <!-- Announcement Card -->
    <LinearLayout
        android:id="@+id/announcementCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_normal"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:layout_marginBottom="16dp">

        <!-- Title & Importance Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#0F172A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="sans-serif-medium" />

            <!-- Importance Badge -->
            <TextView
                android:id="@+id/tvImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_important_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="IMPORTANT"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Subtle Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#E2E8F0" />

        <!-- Message Content -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#475569"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif" />

        <!-- Metadata Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2">

            <!-- Created By -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_person_modern"
                    app:tint="#64748B"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="Creator Icon" />

                <TextView
                    android:id="@+id/tvCreatedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748B"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Timestamp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock_modern"
                    app:tint="#64748B"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="Timestamp Icon" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748B"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
