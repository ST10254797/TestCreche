<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_creche" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Top Welcome Section -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/account_icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome\nSarah Kim"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lines="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notification_icon"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Main Feature Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/feature_card"
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp">

        <GridLayout
            android:id="@+id/grid_features"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:padding="20dp"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <!-- Events -->
            <LinearLayout
                android:id="@+id/btn_events"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/event_icon"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="Events"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Media -->
            <LinearLayout
                android:id="@+id/btn_media"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons"
                tools:ignore="ExtraText">>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gallery_icon"
                    app:tint="#F57C00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Media" />
            </LinearLayout>

            <!-- Attendance -->
            <LinearLayout
                android:id="@+id/btn_attendance"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons">>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/attendance_icon"
                    app:tint="#D32F2F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Attendance" />
            </LinearLayout>

            <!-- Payment -->
            <LinearLayout
                android:id="@+id/btn_payment"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons">>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/payment_icon"
                    app:tint="#388E3C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Payment" />
            </LinearLayout>

            <!-- Updates -->
            <LinearLayout
                android:id="@+id/btn_announcement"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons">>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/announcement_icon"
                    app:tint="#FBC02D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Announcements"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <!-- Messaging -->
            <LinearLayout
                android:id="@+id/btn_messaging"
                style="@style/HomeFeatureItem"
                android:background="@drawable/border_for_event_icons">>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/message_icon"
                    app:tint="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messaging"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </GridLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/parent_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/parent_bottom_nav"
        android:visibility="gone"
        android:background="@color/white"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/parent_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        app:itemIconTint="@color/darkgrey"
        app:itemTextColor="@color/white"
        app:menu="@menu/parent_bottom_nav"/>
</RelativeLayout>
