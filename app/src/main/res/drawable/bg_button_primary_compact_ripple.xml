<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#22000000"> <!-- subtle black ripple overlay -->

    <item>
        <shape>
            <!-- Solid background color -->
            <solid android:color="#4299E1"/>

            <!-- Rounded corners -->
            <corners android:radius="8dp"/>

            <!-- Optional padding -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
</ripple>
